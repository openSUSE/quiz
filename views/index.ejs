<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="icon" type="image/x-icon" href="/img/favicon.png">
  <title>Find a quiz</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;700&display=swap" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet" type="text/css" />
  <style>
    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .quiz-btn.slide-in {
      animation: slideIn 0.6s ease-out forwards;
    }
  </style>
</head>
<body>
  <div class="main-page-container">
    <div class="top-bar-container">
      <div id="loggedInBanner">
        <span id="loggedInUserText"></span>
        <button id="logoutBtn">Forget</button>
      </div>
      <div class="user-controls-block">
        <div class="language-selector-container">
          <label for="lang-select">üåê <%= t("Language") %>:</label>
          <select id="lang-select">
            <% availableLanguages.forEach(function(language) { %>
              <option value="<%= language.code %>" <%= lang === language.code ? "selected" : "" %>>
                <%= language.name %>
              </option>
            <% }); %>
          </select>
        </div>
        <div class="stats-link-container">
          <a href="/stats?lang=<%= lang %>" style="text-decoration:none;">
            <button class="quiz-btn stats-btn slim-stats-btn">
              <span class="quiz-btn-icon">üìä</span>
              <span class="quiz-btn-title"><%= t("Stats") %></span>
            </button>
          </a>
        </div>
        <div class="toggle-link-container">
          <button id="showAllQuizzesBtn" class="quiz-btn stats-btn slim-stats-btn">
            <span class="quiz-btn-icon">‚ú®</span>
            <span class="quiz-btn-title"><%= t("Show All") %></span>
          </button>
        </div>
      </div>
    </div>
    <div class="quiz-main-header">
      <div class="opensuse-quiz-logo-header">
        <img src="<%= THEME_IMAGE %>" alt="<%= THEME_TITLE %>" class="opensuse-quiz-logo-header__image">
        <div class="opensuse-quiz-logo-header__text-block">
          <span class="opensuse-quiz-logo-header__text--opensuse"><%= THEME_TITLE %></span>
          <span class="opensuse-quiz-logo-header__text--quiz" style="color:<%= THEME_COLOR %>;">TEST WIEDZY</span>
        </div>
      </div>
      <p class="quiz-main-subtitle">üßó <%= t("Manewry Mundurowe \"PƒòTLA TAKTYCZNA\" 2025") %></p>
    </div>
    <div class="quizzes">
      <% quizzes.forEach((quiz, index) => { %>
        <a href="./quiz?name=<%- quiz.slug %>&lang=<%= lang %>"
          class="quiz-link"
          data-difficulty="<%= quiz.difficulty || 1 %>">
          <button class="quiz-btn quiz-btn-color-<%= index % 4 %> hide">
            <span class="quiz-btn-icon">üìã</span>
            <span class="quiz-btn-title"><%= t(quiz.title) %></span>
          </button>
        </a>
      <% }) %>
    </div>
  </div>

  <script>
    const langSelect = document.getElementById("lang-select");
    langSelect.addEventListener("change", () => {
      const url = new URL(window.location.href);
      url.searchParams.set("lang", langSelect.value);
      window.location.href = url.toString();
    });

    function showLoggedInUser() {
      const loggedInUser = localStorage.getItem("quizNickname");
      const banner = document.getElementById("loggedInBanner");
      const textSpan = document.getElementById("loggedInUserText");

      if (loggedInUser && loggedInUser.trim().length > 0) {
        textSpan.textContent = `üë§ ${loggedInUser}`;
        banner.style.display = "flex";
      } else {
        banner.style.display = "none";
      }
    }

    function showQuizzes() {
      const quizzes = document.querySelectorAll(".quiz-link");
      const completedSlugs = JSON.parse(localStorage.getItem("completedQuizzes") || "[]");
      const currentDifficulty = parseInt(localStorage.getItem("quizDifficulty") || "1");

      // group quizzes by difficulty
      const allDifficulties = {};
      quizzes.forEach(el => {
        const diff = parseInt(el.dataset.difficulty || "1");
        if (!allDifficulties[diff]) allDifficulties[diff] = [];
        allDifficulties[diff].push(el);
      });

      // count completions at current level
      const totalAtLevel = (allDifficulties[currentDifficulty] || []).length;
      const doneAtLevel = (allDifficulties[currentDifficulty] || []).filter(el => {
        const slug = new URL(el.href).searchParams.get("name");
        return completedSlugs.includes(slug);
      }).length;

      // progression rule
      let unlockNext = false;
      if (totalAtLevel === 1) {
        unlockNext = doneAtLevel === 1;
      } else if (totalAtLevel === 2) {
        unlockNext = doneAtLevel >= 1;
      } else if (totalAtLevel > 2) {
        unlockNext = doneAtLevel >= 2;
      }

      if (unlockNext) {
        localStorage.setItem("quizDifficulty", currentDifficulty + 1);
        localStorage.setItem("newQuizzesUnlocked", "true");
      }

      const quizDifficulty = parseInt(localStorage.getItem("quizDifficulty") || "1");
      const showAll = localStorage.getItem("showAllQuizzes") === "true";
      const animateNew = localStorage.getItem("newQuizzesUnlocked") === "true";

      // show/hide and mark quizzes
      quizzes.forEach(el => {
        const diff = parseInt(el.dataset.difficulty || "1");
        const btn = el.querySelector(".quiz-btn");

        if (showAll || diff <= quizDifficulty) {
          if (btn.classList.contains("hide")) {
            btn.classList.remove("hide");

            if (animateNew && diff === quizDifficulty) {
              btn.classList.add("slide-in");
              setTimeout(() => btn.classList.remove("slide-in"), 1000);
            }
          }
        } else {
          btn.classList.add("hide");
        }

        const slug = new URL(el.href).searchParams.get("name");
        if (completedSlugs.includes(slug)) {
          el.classList.add("completed");
          const iconSpan = el.querySelector(".quiz-btn-icon");
          if (iconSpan) iconSpan.textContent = "‚úÖ";
        }
      });

      // clear flag after animation
      if (animateNew) {
        localStorage.removeItem("newQuizzesUnlocked");
      }
    }

    document.getElementById("logoutBtn").addEventListener("click", () => {
      localStorage.removeItem("quizNickname");
      localStorage.removeItem("quizDifficulty");
      localStorage.removeItem("quizNextDifficulty");
      localStorage.removeItem("completedQuizzes");

      showLoggedInUser();
      showQuizzes();
    });

    // Toggle behavior
    const toggleLabels = {
      showAll: "<%= t('Show All') %>",
      hideLocked: "<%= t('Level Up') %>"
    };

    const toggleBtn = document.getElementById("showAllQuizzesBtn");
    toggleBtn.addEventListener("click", () => {
      const newState = localStorage.getItem("showAllQuizzes") !== "true";
      localStorage.setItem("showAllQuizzes", newState);
      toggleBtn.querySelector(".quiz-btn-icon").textContent = newState ? "üöÄ" : "‚ú®";
      toggleBtn.querySelector(".quiz-btn-title").textContent = newState ? toggleLabels.hideLocked : toggleLabels.showAll;
      showQuizzes();
    });
    showQuizzes();
    showLoggedInUser();
  </script>

